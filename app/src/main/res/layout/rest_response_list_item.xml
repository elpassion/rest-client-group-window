<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/name_rate_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/place_item_details_padding"
    android:clickable="true"
    android:background="@drawable/focused_background">


    <ImageView
        android:id="@+id/placeIcon"
        android:layout_width="36dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/place_item_details_padding"
        android:textSize="@dimen/place_item_text_size"
        tools:text="Nazwa" />

    <TextView
        android:id="@+id/rate"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textSize="@dimen/place_item_text_size"
        tools:text="5.0" />

</LinearLayout>